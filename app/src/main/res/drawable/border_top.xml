<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-10dp"
        android:end="-10dp"
        android:start="-10dp">
        <!-- topのみ枠を表示 -->
        <!-- android:top="-10dp" -->
        <!-- -1dpだとまだ少し枠が見えるので-10dpにしている -->
        <shape>
            <solid android:color="@android:color/transparent" />
            <!-- よくわからないがcolorButtonNormalにしてみる -->
            <stroke
                android:width="1dp"
                android:color="?attr/colorButtonNormal" />
        </shape>
    </item>

</layer-list>

